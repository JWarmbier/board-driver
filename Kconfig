mainmenu "CAN Robot Controller"

config LOOPBACK_MODE
	bool "Loopback LOOPBACK_MODE"
	default n
	help
	  Set the controller to loopback mode.
	  This allows testing without a second board.

config NORMAL_MODE
	bool "Normal NORMAL_MODE"
	default y
	help
	  Set the controller to normal mode.
	  This allows testing without a second board.

source "Kconfig.zephyr"